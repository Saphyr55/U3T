<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.Integer?>

<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="utours.ultimate.desktop.view.DesktopPartiesView"
         fx:id="partiesView"
         fx:controller="utours.ultimate.desktop.controller.PartiesController" >

    <fx:define>
        <Integer fx:value="2" fx:id="PADDING_SIZE"/>
    </fx:define>

    <ScrollPane
            prefWidth="${partiesView.width}"
            prefHeight="${partiesView.height}">

        <VBox fx:id="container"
              prefWidth="${partiesView.width - PADDING_SIZE}"
              prefHeight="${partiesView.height - PADDING_SIZE}"/>

    </ScrollPane>

</fx:root>
