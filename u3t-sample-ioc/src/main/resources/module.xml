<?xml version="1.0" encoding="UTF-8" ?>
<module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="module.xsd" >

    <component id="Sample.AComponent"
               class="utours.ultimate.ioc.AComponent"
               strategy="derived"
               type="additional" />

    <component class="utours.ultimate.ioc.BComponent"
               id="Sample.BComponent"
               type="additional"
               strategy="derived">

        <constructor-args>

            <arg name="wrapped"
                 value="Sample.AComponent"
                 type="utours.ultimate.ui.ComponentInterface" />

        </constructor-args>

    </component>

    <add-component class="utours.ultimate.ui.ComponentInterface">

        <component id="Sample.CComponent"
                   class="utours.ultimate.ioc.CComponent"
                   strategy="derived"
                   type="additional" />

        <ref-component ref="Sample.AComponent" />

    </add-component>

</module>